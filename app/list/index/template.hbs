<div class="col-md-12">
  <div class="pull-md-right">
    {{#link-to "list.new"}}{{fa-icon "plus" size=2}}{{/link-to}}
  </div>
</div>

<div class="col-md-12">
  {{#if lists}}
    <div class="card-deck">
      {{#each lists as |list|}}
        {{list-card list=list goToList=(action "goToList")}}
      {{/each}}
    </div>
  {{else}}
    <p>
      You have no lists - {{#link-to "list.new"}}{{fa-icon "plus" size=2}}{{/link-to}}
    </p>
  {{/if}}
</div>
