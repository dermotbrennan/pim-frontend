
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-default">
    <tr>
      <th colspan="2">Item</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    {{#each items as |item|}}
    <tr>
      <td class="item-image-td">{{#link-to 'item.edit' item.id}}<img src={{item.image_thumb_url}} alt={{item.name}} onerror="this.style.display='none'" />{{/link-to}}</td>
      <td>{{#link-to 'item.edit' item.id}}{{item.name}}{{/link-to}}</td>
      <td>{{format-currency item.value}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2">Total</td>
      <td>{{format-currency totalValue}}</td>
    </tr>
  </tfoot>
</table>
